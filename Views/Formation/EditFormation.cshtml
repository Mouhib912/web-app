@model WebApplication2.ViewModels.FormationFormViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Formation</h2>
<hr />
@using (Html.BeginForm("Edit", "Formation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Nom)
        @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nom, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImgUrl)
        <input type="file" name="ImgUrl" id="ImgUrl" class="form-control-file" accept="image/*" />
        @Html.ValidationMessageFor(m => m.ImgUrl, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IsActive)
        @Html.DropDownListFor(m => m.IsActive, new SelectList(new[] { true, false }), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IsActive, null, new { @class = "text-danger" })
    </div>

    <br />

    <button type="submit" class="btn btn-dark" onclick="return confirm('Are you sure you want to update this formation?')">Update</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
